// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Better Auth models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified Boolean   @default(false)
  image         String?

  // Theme preference (preset theme ID)
  themeId        String    @default("default")

  accounts          Account[]
  sessions          Session[]
  passkeys          Passkey[]
  tasks             Task[]
  categories        Category[]
  collaborations    TaskCollaborator[]
  notifications     Notification[]
  createdInvites    TaskInvite[] @relation("InviteCreator")
  pushSubscriptions PushSubscription[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                    String    @id @default(cuid())
  userId                String
  accountId             String
  providerId            String
  accessToken           String?   @db.Text
  refreshToken          String?   @db.Text
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  idToken               String?   @db.Text
  password              String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([providerId, accountId])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  ipAddress String?
  userAgent String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Passkey {
  id           String   @id @default(cuid())
  name         String?
  publicKey    String   @db.Text
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  credentialID String   @unique
  counter      Int
  deviceType   String
  backedUp     Boolean
  transports   String?
  aaguid       String?
  createdAt    DateTime @default(now())

  @@index([userId])
}

model Verification {
  id         String   @id @default(cuid())
  identifier String
  value      String
  expiresAt  DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([identifier, value])
}

// Application models
model Category {
  id     String @id @default(cuid())
  name   String
  color  String @default("#6366f1") // Default indigo
  icon   String? // Lucide icon name
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks  Task[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, name])
}

enum Urgency {
  LOW
  MEDIUM
  HIGH
}

enum Effort {
  MINIMAL   // 1 - very easy
  LOW       // 2 - easy
  MODERATE  // 3 - medium
  HIGH      // 4 - hard
  EXTREME   // 5 - very hard
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  DEFERRED
}

enum RecurrenceType {
  NONE
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
  CUSTOM
}

model Task {
  id          String     @id @default(cuid())
  title       String
  body        String?    @db.Text

  // Duration in minutes
  duration    Int?

  // Location (structured fields)
  locationFormatted   String?   @db.Text
  locationLat         Float?
  locationLon         Float?
  locationCity        String?
  locationCountry     String?
  locationPlaceId     String?

  // Effort level (1-5 scale)
  effort      Effort     @default(MODERATE)

  // Urgency level
  urgency     Urgency    @default(MEDIUM)

  // Deadline with optional time
  deadline    DateTime?

  // Status
  status      TaskStatus @default(PENDING)

  // Recurrence settings
  recurrenceType   RecurrenceType @default(NONE)
  recurrenceRule   String?        @db.Text // iCal RRULE format for complex patterns
  nextOccurrence   DateTime?

  // Dependencies (one level deep)
  parentId    String?
  parent      Task?      @relation("TaskDependencies", fields: [parentId], references: [id], onDelete: SetNull)
  children    Task[]     @relation("TaskDependencies")

  // Category
  categoryId  String?
  category    Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)

  // Owner
  userId      String
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Collaborators
  collaborators TaskCollaborator[]

  // Invites and notifications
  invites       TaskInvite[]
  notifications Notification[]

  // Completion tracking
  completedAt DateTime?

  // Position for ordering
  position    Int        @default(0)

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([userId, status])
  @@index([userId, deadline])
  @@index([parentId])
  @@index([categoryId])      // Optimize category filtering
  @@index([createdAt])       // Optimize date sorting
  @@index([status, urgency]) // Optimize priority sorting
}

model TaskCollaborator {
  id        String @id @default(cuid())
  taskId    String
  userId    String
  task      Task   @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Permission level
  canEdit   Boolean @default(false)

  // Who invited this collaborator
  invitedBy String?

  createdAt DateTime @default(now())

  @@unique([taskId, userId])
  @@index([userId])
}

// Task sharing invite links
model TaskInvite {
  id        String   @id @default(cuid())
  token     String   @unique
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdBy String
  creator   User     @relation("InviteCreator", fields: [createdBy], references: [id], onDelete: Cascade)

  // Permission granted on accept
  canEdit   Boolean  @default(false)
  expiresAt DateTime

  createdAt DateTime @default(now())

  @@index([token])
  @@index([taskId])
}

// Notification types
enum NotificationType {
  TASK_SHARED
  COLLABORATOR_JOINED
  COLLABORATOR_LEFT
  TASK_COMPLETED
}

// In-app notifications
model Notification {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)

  type      NotificationType
  title     String
  message   String

  taskId    String?
  task      Task?            @relation(fields: [taskId], references: [id], onDelete: SetNull)

  read      Boolean          @default(false)
  createdAt DateTime         @default(now())

  @@index([userId, read])
  @@index([userId, createdAt])
}

// Push notification subscriptions for PWA
model PushSubscription {
  id        String @id @default(cuid())
  userId    String
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Web Push subscription data
  endpoint  String @unique
  p256dh    String // Public key for encryption
  auth      String // Authentication secret

  // Device info for management
  userAgent String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}
